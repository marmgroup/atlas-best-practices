  author = {Bijleveld, Allert Imre and MacCurdy, Robert B and Chan, Ying-Chi and Penning, Emma and Gabrielson, Richard M. and Cluderay, John and Spaulding, Erik L. and Dekinga, Anne and Holthuijsen, Sander and {ten Horn}, Job and Brugge, Maarten and {van Gils}, Jan A. and Winkler, David W and Piersma, Theunis},
  year = {2016},
