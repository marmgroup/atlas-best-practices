  keywords = {Acoustic telemetry,Autonomous positioning,Autonomous underwater vehicle,Long-term tracking,Telemetry capabilities,Telemetry limitations},
  language = {en}
}

@article{bijleveld2016,
  title = {Understanding Spatial Distributions: Negative Density-Dependence in Prey Causes Predators to Trade-off Prey Quantity with Quality},
